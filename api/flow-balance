#!/bin/bash

# Script para verificar saldo Flow facilmente
# Uso: ./flow-balance [endere\u00e7o] [network]

# Cores para output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Endere\u00e7o padr\u00e3o (pode ser sobrescrito)
DEFAULT_ADDRESS="0x25f823e2a115b2dc"
DEFAULT_NETWORK="testnet"  # Sempre usar testnet

# Usa argumentos ou valores padr\u00e3o
ADDRESS=${1:-$DEFAULT_ADDRESS}
NETWORK=${2:-$DEFAULT_NETWORK}

# Remove 0x se presente
ADDRESS=${ADDRESS#0x}

echo -e "${GREEN}Flow Balance Checker${NC}"
echo "-------------------"

# Verifica se Python est\u00e1 instalado
if ! command -v python3 &> /dev/null; then
    echo -e "${RED}Erro: Python3 n\u00e3o encontrado!${NC}"
    exit 1
fi

# Executa o script Python
python3 scripts/check_flow_balance_mcp.py "$ADDRESS" "$NETWORK"

# Adiciona ajuda se nenhum argumento foi passado
if [ $# -eq 0 ]; then
    echo ""
    echo -e "${YELLOW}Dica: Voc\u00ea pode verificar outros endere\u00e7os usando:${NC}"
    echo "  ./flow-balance <endere\u00e7o> [network]"
    echo ""
    echo "Exemplos:"
    echo "  ./flow-balance 0x1234567890abcdef mainnet"
    echo "  ./flow-balance 0x01cf0e2f2f715450 testnet"
fi