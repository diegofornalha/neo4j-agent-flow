# Flow Configuration
FLOW_NETWORK=mainnet
FLOW_ACCOUNT_ADDRESS=0x25f823e2a115b2dc

# Para testnet, use:
# FLOW_NETWORK=testnet
# FLOW_ACCOUNT_ADDRESS=0x01cf0e2f2f715450

# API URLs (j\u00e1 configuradas no script)
# Mainnet: https://rest-mainnet.onflow.org
# Testnet: https://rest-testnet.onflow.org

# Flow Native Bootcamp - Configurações de Exemplo
# Copie este arquivo para .env e preencha com suas credenciais

# ====================================
# FLOW BLOCKCHAIN
# ====================================

# Sua conta Flow (obter em https://testnet-faucet.onflow.org/)
FLOW_ACCOUNT_ADDRESS=0x...
FLOW_PRIVATE_KEY=...

# Rede Flow (mainnet, testnet, emulator)
FLOW_NETWORK=testnet

# Access Node (opcional - usa padrão por rede)
FLOW_ACCESS_NODE=https://rest-testnet.onflow.org

# ====================================
# NEO4J (Grafo de Conhecimento)
# ====================================

# Conexão com Neo4j (opcional)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# ====================================
# SERVIDOR (opcional)
# ====================================

# WebSocket Server
WS_PORT=8080

# Express API
API_PORT=3000

# ====================================
# DESENVOLVIMENTO
# ====================================

# Nível de log (debug, info, warn, error)
LOG_LEVEL=info

# Ambiente (development, production)
NODE_ENV=development

# Neo4j Connection (via MCP)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here

# Bootcamp Configuration
BOOTCAMP_USER=diego-fornalha
BOOTCAMP_CURRENT_SCORE=45
BOOTCAMP_TARGET_SCORE=100
BOOTCAMP_CURRENT_WEEK=1
BOOTCAMP_TOTAL_WEEKS=12

# Server Configuration
SERVER_PORT=4000
SERVER_HOST=localhost

# Client Configuration
CLIENT_PORT=3000
VITE_SERVER_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000

# Hackathon Flow Blockchain Agents Configuration
# NUNCA use ANTHROPIC_API_KEY!
# Use 'claude login' para autenticar
CLAUDE_AUTH_METHOD=login

# MCP Tools Configuration
MCP_NEO4J_ENABLED=true
MCP_NEO4J_SERVER=neo4j-memory
MCP_NEO4J_VERSION=latest

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
ENABLE_HOT_RELOAD=true

# Knowledge Graph Settings
DEFAULT_LABEL=Learning
MAX_SEARCH_RESULTS=50
DEFAULT_DEPTH=2
ENABLE_AUTO_SYNC=true

# Session Settings
SESSION_TIMEOUT=3600000
MAX_MESSAGES_PER_SESSION=1000
ENABLE_SESSION_PERSISTENCE=true

# Feature Flags
ENABLE_REAL_MCP=true
ENABLE_MOCK_MODE=false
ENABLE_KNOWLEDGE_EXPLORER=true
ENABLE_INSIGHT_DASHBOARD=true
ENABLE_LEARNING_TIMELINE=true

# Monitoring
ENABLE_TELEMETRY=false
ENABLE_PERFORMANCE_TRACKING=false

# Security
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false
RATE_LIMIT_ENABLED=false